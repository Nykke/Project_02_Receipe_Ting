<h3>Edit Recipe</h3>

<%= form_for @recipe do |f| %>
  <%= f.label :title %><br />
  <%= f.text_field :title %><br />

  <%= f.label :ingredients %><br />
  <%= f.text_area :ingredients %><br />

  <%= f.label :directions %><br />
  <%= f.text_area :directions %><br />

  <%= f.label :img_url %><br />
  <%= f.text_field :img_url %><br />
<br />
<%= f.submit %>
<% end %><br />

<%= form_for @recipe, method: :delete do |f| %>
  <%= f.submit "Delete", class: "delete" %><br />
  <% end %>
