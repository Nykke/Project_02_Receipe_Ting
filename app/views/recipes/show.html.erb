<h2><%= @recipe.title %></h2>

  <div class="recipe">
    <img src="<%= @recipe.img_url %>">
      <h3>Ingredients</h3>
      <ul>
        <% @recipe.ingredients.split(", ").each do |i| %>
          <li><%= i %></li>
        <% end %>
      </ul>
      <h3>Directions</h3>
        <ul id="instructions">
          <% @recipe.directions.split(", ").each do |i| %>
          <li><%= i %></li>
          <% end %>
        </ul>
  </div>

<h3><span><%= link_to "Edit Recipe", edit_recipe_path%></span></h3>
