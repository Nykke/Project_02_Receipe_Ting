
<%= form_for [@category, @recipe, @comment] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%=f.submit %>
  <% end %>

  <%= form_for [@category, @recipe, @comment], method: :delete do |f| %>
    <%= f.submit "Delete!", class: "delete" %>
  <% end %>
