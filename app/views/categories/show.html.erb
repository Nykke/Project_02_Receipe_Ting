<h2 class="cname"><%= @category.name %></h2>

<h3 class="addrecipe"><%=link_to "Add Recipe", new_category_recipe_path(@category) %></h3>

<% @category.recipes.each do |recipe| %>
<div class="recipe">
  <div class="food">
    <img class="rimage" src="<%= recipe.img_url %>">
      <a href="/recipes/<%= recipe.id %>"><p class="rtitle"><%= recipe.title %></a></p>
  </div>
</div>


<%end %>
